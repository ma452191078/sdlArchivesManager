<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbackground">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_Logo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:scaleType="centerInside"
            android:src="@mipmap/logo2_1" />

        <LinearLayout
            android:id="@+id/login_UserPass"
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:layout_below="@+id/login_Logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@mipmap/userandpass"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_login_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:hint="用户名"
                android:textSize="15dp"
                android:background="@null"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/et_login_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:hint="密码"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:background="@null"
                android:singleLine="true"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/login_UserPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_selector"
            android:text="登   录"
            android:textSize="@dimen/activity_head_text"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>
</RelativeLayout>
